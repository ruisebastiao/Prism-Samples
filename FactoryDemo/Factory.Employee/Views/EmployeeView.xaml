<UserControl x:Class="Factory.EmployeeModule.Views.EmployeeView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" BorderThickness="1" 
                       DockPanel.Dock="Left" MinWidth="500" MinHeight="100"
                              >
    <UserControl.Resources>
        <ControlTemplate x:Key="validationTemplate">
            <Grid>
                <Ellipse Fill="Red" Opacity="0.8" Width="10" Height="10"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 ToolTip="{Binding Path=ErrorContent}" />
                <AdornedElementPlaceholder />
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Background="Transparent" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="109*"/>
        </Grid.RowDefinitions>




        <Border BorderThickness="1" CornerRadius="5,5,0,0" BorderBrush="Gray" Grid.Row="0">
            <TextBlock Background="{DynamicResource AccentColorBrush}" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Employee.FirstName}"
                 >

            </TextBlock>

        </Border>
        <Border Grid.Row="1" BorderThickness="1" CornerRadius="0,0,5,5" BorderBrush="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="157*"/>
                    <ColumnDefinition Width="259*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="27"/>
                    <RowDefinition Height="23"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Text="First Name:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Text="Last Name:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" 
                         Text="{Binding Employee.FirstName,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         VerticalAlignment="Bottom"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" 
                         Text="{Binding Employee.LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"  
                         VerticalAlignment="Bottom"/>

            </Grid>
        </Border>

    </Grid>

</UserControl>
